<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Basis-Gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="#1A1A1A"
                android:startColor="#2D2D2D"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtiles Muster -->
    <item>
        <shape>
            <solid android:color="#08FFFFFF" />
            <size
                android:width="4dp"
                android:height="4dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Overlay fÃ¼r Tiefeneffekt -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#00000000"
                android:endColor="#22000000"
                android:startColor="#11000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list> 