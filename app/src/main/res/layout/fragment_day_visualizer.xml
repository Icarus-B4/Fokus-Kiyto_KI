<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_dark"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/tvMonthYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="März 2025"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <ImageButton
                            android:id="@+id/btnCalendarSettings"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/coral" />

                        <ImageButton
                            android:id="@+id/btnNotifications"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/coral" />

                        <ImageButton
                            android:id="@+id/btnSettings"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/coral" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Di"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background"
                                android:gravity="center"
                                android:text="4"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mi"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background"
                                android:gravity="center"
                                android:text="5"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Do"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background"
                                android:gravity="center"
                                android:text="6"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fr"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background"
                                android:gravity="center"
                                android:text="7"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sa"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background"
                                android:gravity="center"
                                android:text="8"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="So"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay6"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background_selected"
                                android:gravity="center"
                                android:text="9"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mo"
                                android:textSize="14sp"
                                android:textColor="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvDay7"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/calendar_day_background"
                                android:gravity="center"
                                android:text="10"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvCounter7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/emptyStateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Keine Aufgaben für diesen Tag"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/timelineRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Hintergrund für das Aktionsmenü, der als Schließen-Button fungiert -->
    <View
        android:id="@+id/taskActionsBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/taskActionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="@drawable/action_menu_background"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDeleteTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Löschen"
                android:src="@drawable/ic_delete"
                app:tint="@color/coral" />

            <TextView
                android:id="@+id/txtDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LÖSCHEN"
                android:textColor="@color/coral"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnEditTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bearbeiten"
                android:src="@drawable/ic_edit"
                app:tint="@color/coral" />

            <TextView
                android:id="@+id/txtEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEARBEITEN"
                android:textColor="@color/coral"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCopyTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Kopieren"
                android:src="@drawable/ic_copy"
                app:tint="@color/coral" />

            <TextView
                android:id="@+id/txtCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOPIEREN"
                android:textColor="@color/coral"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCompleteTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Erledigt"
                android:src="@drawable/ic_check"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/txtComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ERLEDIGT"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
        

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 