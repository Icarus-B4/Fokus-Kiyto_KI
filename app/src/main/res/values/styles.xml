<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Basis-Stil für die App -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <!-- Stil für den Kalender -->
    <style name="CalendarViewCustom" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:colorControlHighlight">@color/blue</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:background">@color/card_dark</item>
    </style>

    <!-- Stil für die Toolbar -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background_dark</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/gray</item>
    </style>

    <!-- Stil für Buttons -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Stil für Text-Buttons -->
    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="rippleColor">@color/blue_light</item>
    </style>

    <!-- Stil für Karten -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Calendar styles -->
    <style name="CalendarHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDates" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarViewDark" parent="ThemeOverlay.MaterialComponents">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
</resources> 